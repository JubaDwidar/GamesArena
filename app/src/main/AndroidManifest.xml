<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.Arena">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.example.Arena.HiltApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcheing"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.Arena.ui.SplashScreenActivity"
            android:theme="@style/AppThemeFlat">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name="com.example.Arena.ui.details.GamesDetailsActivity"
            android:theme="@style/AppThemeFlat">

        </activity>
        <activity android:name="com.example.Arena.ui.games.GamesActivity">

        </activity>
        <activity
            android:name="com.example.Arena.ui.genres.GenresActivity"
            android:theme="@style/AppThemeFlat">

        </activity>
    </application>

</manifest>